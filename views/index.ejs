<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/nav.ejs') %>
    <section>
      <h1>Blogs</h1>
      <% if (blogs.length > 0) { %> <% for( let index = 0; index < blogs.length;
      index++ ) { %>
      <a href="/blogs/<%= blogs[index]._id %>">
        <h4><%= blogs[index].title %></h4>
      </a>
      <p><%= blogs[index].content %></p>
      <% } %> <% } else { %>
      <p>There is no post here.</p>
      <% } %>
    </section>
    <%- include('./partials/footer.ejs') %>
  </body>
</html>
